@model IEnumerable<e_course_web.Models.Exam>
@*
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Exams";
}
<!-- breadcrumb start -->
<div class="breadcrumb-nav">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-route-area="Customer">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Exams</li>
            </ol>
        </nav>
    </div>
</div>
<!-- breadcrumb end -->
<!-- courses section start -->
<section class="course-section section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="section-title text-center mb-4">
                    <h2 class="title">our courses</h2>
                    <p class="sub-title">Find the right course for you</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <nav>
                    <div class="nav nav-tabs border-0 justify-content-center mb-4" id="myTab" role="tablist">
                        <a class="nav-link active" id="all-tab" data-bs-toggle="tab"
                           data-bs-target="#all" type="button" role="tab"
                           aria-controls="all" aria-selected="true">
                            All
                        </a>
                        @foreach (var item in ViewBag.Categories as List<Categories>)
                        {
                            <a class="nav-link" id="@(item.Id)-tab" data-bs-toggle="tab" data-bs-target="#@(item.Id)"
                               type="button" role="tab" aria-controls=@(item.Id)
                               aria-selected="false">
                                @item.Category
                            </a>
                        }
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="all" role="tabpanel"
                         aria-labelledby="all-tab">
                        <div class="row justify-content-center">
                            @foreach (var exam in Model)
                            {
                                <!-- courses item start -->
                                <div class="col-md-6 col-lg-3">
                                    <div class="courses-item">
                                        <a asp-controller="Exam" asp-action="Detail" asp-route-area="Customer" asp-route-id="@exam.Id" class="link">
                                            <div class="courses-item-inner">
                                                <div class="img-box">
                                                    <img src=@exam.ImageUrl alt="course img">
                                                </div>
                                                <h3 class="title">@exam.Title</h3>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <!-- courses item end -->
                            }
                        </div>
                    </div>
                    @foreach (var item in ViewBag.Categories as List<Categories>)
                    {
                        <div class="tab-pane fade show" id=@item.Id role="tabpanel"
                             aria-labelledby="@(item.Id)-tab">
                            <div class="row justify-content-center">
                                @foreach (var exam in Model)
                                {
                                    if(exam.CategoryId == item.Id)
                                    {
                                        <!-- courses item start -->
                                        <div class="col-md-6 col-lg-3">
                                            <div class="courses-item">
                                                <a asp-controller="Course" asp-action="Detail" asp-route-area="Customer" asp-route-id="@exam.Id" class="link">
                                                    <div class="courses-item-inner">
                                                        <div class="img-box">
                                                            <img src=@exam.ImageUrl alt="course img">
                                                        </div>
                                                        <h3 class="title">@exam.Title</h3>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                        <!-- courses item end -->
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
    </div>
</section>
<!-- courses section start -->

                        