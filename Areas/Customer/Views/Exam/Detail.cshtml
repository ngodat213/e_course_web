                                                </div>
                                                <div class="percent">3%</div>
                                            </div>
                                            <!-- rating bars item end -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ratting sumary end -->
                            <!-- reviews filter start -->
                            <div class="reviews-filter">
                                <h3 class="mb-4 text-capitalize">reviews</h3>
                                <form action="">
                                    <div class="form-group">
