@model e_course_web.ViewModels.ExamVM

@{
    ViewData["Title"] = "AddQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive text-nowrap container-fluid section-padding">
    <div class="product-payment-inner-st">
        <div class="review-content-section box">
            <div class="col-10">
                <h2>Create Exam</h2>
            </div>
            <ul id="myTabedu1" class="tab-review-design">
                <li class="active">Question Details </li>
            </ul>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-content-section">
                        <div id="dropzone1" class="pro-ad addcoursepro">
                            <form asp-action="Create" method="post" enctype="multipart/form-data"
                                  class="dropzone dropzone-custom needsclick addcourse"
                                  id="demo1-upload">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <input asp-for="Title" type="text"
                                                   class="form-control"
                                                   placeholder="Question Name">
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CategoryId">Category</label>
                                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Image">Question Image</label>
                                            <input type="file" asp-for="Image" class="form-control" />
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <button type="submit"
                                                        class="btn btn-primary waves-effect waves-light">
                                                    Submit
                                                </button>
                                            </div>
                                            <div class="col-lg-6">
                                                <a asp-action="Index" class="btn btn-success waves-effect waves-light">
                                                    Back to list
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <textarea id="myeditor" asp-for="Description" name="description"
                                                      placeholder="Description"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}