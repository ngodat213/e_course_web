@{
}


<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <div class="review-content-section box">
                        <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12">Edit Video Details </h2>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="review-content-section">
                                <div id="dropzone1" class="pro-ad addcoursepro">
                                    <form asp-action="Video" method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
                                                <label asp-for="@Model.CourseVideo.Part">Part</label>
                                                <input asp-for="@Model.CourseVideo.Part" type="number" class="form-control" placeholder="Part">
                                                <span asp-validation-for="@Model.CourseVideo.Part" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
                                                <label asp-for="@Model.CourseVideo.Title">Title</label>
                                                <input asp-for="@Model.CourseVideo.Title" type="text" class="form-control" placeholder="Title">
                                                <span asp-validation-for="@Model.CourseVideo.Title" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
                                                <label asp-for="@Model.CourseVideo.Hour">Hour</label>
                                                <input asp-for="@Model.CourseVideo.Hour" type="number" class="form-control" placeholder="Hour">
                                                <span asp-validation-for="@Model.CourseVideo.Hour" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
                                                <label asp-for="@Model.CourseVideo.Minute">Minute</label>
                                                <input asp-for="@Model.CourseVideo.Minute" type="number" class="form-control" placeholder="Minute">
                                                <span asp-validation-for="@Model.CourseVideo.Minute" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 form-group">
                                                <label asp-for="Video">Video</label>
                                                <input type="file" asp-for="Video" class="form-control" />
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>